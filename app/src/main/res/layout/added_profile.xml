<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cardview_border"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview_border"
        android:padding="10dp">

        <TextView
            android:id="@+id/maxTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namaInkubasiTextView"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/tempInkubatorTextView"
            android:layout_toRightOf="@+id/tempInkubatorTextView"
            android:text="@string/temp" />

        <ImageView
            android:id="@+id/gambarUnggas"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/gambar_unggas"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/namaInkubasiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/gambarUnggas"
            android:layout_toRightOf="@+id/gambarUnggas"
            android:text="@string/nama" />

        <TextView
            android:id="@+id/tempInkubatorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namaInkubasiTextView"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/gambarUnggas"
            android:layout_toRightOf="@+id/gambarUnggas"
            android:text="@string/temp" />

        <TextView
            android:id="@+id/moistInkubatorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tempInkubatorTextView"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/gambarUnggas"
            android:layout_toRightOf="@+id/gambarUnggas"
            android:text="@string/moist" />

        <TextView
            android:id="@+id/incubationTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moistInkubatorTextView"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/gambarUnggas"
            android:layout_toRightOf="@+id/gambarUnggas"
            android:text="@string/t_incubation" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>